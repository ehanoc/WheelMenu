<?xml version="1.0" encoding="utf-8"?>
<com.ehanoc.menuwheel.view.WheelMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wheelmenu"
    android:layout_width="@dimen/wheelmenu_size"
    android:layout_height="@dimen/wheelmenu_size"
    app:dividers="3"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/wheelmenu_background_menu"
        android:layout_width="@dimen/wheelmenu_size"
        android:layout_height="@dimen/wheelmenu_size"
        android:scaleType="fitCenter"
        android:src="@drawable/wheel_white_bg"
        android:visibility="visible" />

    <com.ehanoc.menuwheel.view.CircleLayout
        android:id="@+id/circle_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:rotation="0">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />


    </com.ehanoc.menuwheel.view.CircleLayout>


    <include
        layout="@layout/circle_lense"
        android:layout_width="@dimen/inner_lense_size"
        android:layout_height="@dimen/inner_lense_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="51dp" />

</com.ehanoc.menuwheel.view.WheelMenuLayout>