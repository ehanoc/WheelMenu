<?xml version="1.0" encoding="utf-8"?>
<com.ehanoc.menuwheel.view.WheelMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wheelmenu"
    android:layout_width="@dimen/wheelmenu_size"
    android:layout_height="@dimen/wheelmenu_size"
    app:dividers="4">

    <ImageView
        android:id="@+id/wheelmenu_background_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wheel_white_bg"
        android:visibility="visible" />

    <com.ehanoc.menuwheel.view.CircleLayout
        android:id="@+id/circle_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:rotation="0"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="254dp">

        <ImageView
            android:layout_width="@dimen/wheel_menu_icon_size"
            android:layout_height="@dimen/wheel_menu_icon_size"
            android:background="@android:color/transparent"
            android:rotation="270"
            android:src="@mipmap/ic_launcher" />


        <ImageView
            android:layout_width="@dimen/wheel_menu_icon_size"
            android:layout_height="@dimen/wheel_menu_icon_size"
            android:background="@android:color/transparent"
            android:rotation="90"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="@dimen/wheel_menu_icon_size"
            android:layout_height="@dimen/wheel_menu_icon_size"
            android:background="@android:color/transparent"
            android:rotation="90"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="@dimen/wheel_menu_icon_size"
            android:layout_height="@dimen/wheel_menu_icon_size"
            android:background="@android:color/transparent"
            android:rotation="90"
            android:src="@mipmap/ic_launcher" />

    </com.ehanoc.menuwheel.view.CircleLayout>


